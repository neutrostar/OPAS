	<% include ./partials/faculty_nav %>
		<div class="col-sm-8">
			<br><br>
			<div class="container" style="width: 600px">
					<form action="/faculty/groups/view/<%= currentGroup._id %>/assignments/create" method="post">
							<div class="form-group">
								<input type="text" name="title" class="form-control" id="title" placeholder="Assignment Title">
							  </div>
							  <div class="form-group">
								  Select a language: <br>
							  </div>	
							  <div class="form-check">
