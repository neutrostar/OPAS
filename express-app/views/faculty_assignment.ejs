<% include ./partials/faculty_header %>
	
		<% include ./partials/faculty_nav %>

			<div class="col s7">
				<div class = "row">
						
					<% if (assignments.length != 0) { %>

						<h3 class = "header"><font color = "teal">Ongoing Assignments</font></h3>

						<% assignments.forEach(function(assignment) { %>
							<div class="col s12 m6">
								<div class="card teal lighten-1">
									<div class="card-content white-text">

										<% if (assignment.subject) { %>

											<span class="card-title"><%= assignment.subject.subject_id %></span>
										<% } %>	
										<p>
											<b><%= assignment.title %></b><br>
											Start date : 5/05/2018<br>
											Deadline : 10/05/2018
										</p>
									</div>
									<div class="card-action white">
										<a href="/faculty/groups/view/<%= currentGroup._id %>/assignments/edit/<%= assignment._id %>"><font color = "grey">Edit Assignment</font></a>
										<a href="/faculty/assignments/<%= assignment.id %>/viewsubmissions"><font color = "grey">View Submissions</font></a>
									</div>
								</div>
						    </div>

					    <% }); %>

					<% } else { %>

						<h3 class = "header"><font color = "teal">Currently no assignments</font></h3>
					<% } %>
			    </div>
		
			<div class = "col s7 offset-s12">
				<a href="/faculty/groups/view/<%= currentGroup._id %>/assignments/create" class="btn-floating btn-large waves-effect waves-light teal lighten-1"><i class="material-icons">add</i></a>
			</div>
				<!-- Grey navigation panel -->
			
			</div>
		</div>
	</body>
</html>