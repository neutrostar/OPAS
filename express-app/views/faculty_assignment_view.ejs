                </div>
            </form> -->
            
            <form action="/faculty/groups/view/<%=currentGroup._id%>/assignments/view/<%=assignment._id%>?_method=DELETE" method = "post">
                <div class = "form-group">
                    <input type="submit" value="Delete Assignment" class="btn btn-danger btn-block">
                </div>
            </form>

        </div>
    </body>
