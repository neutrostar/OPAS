<% include ./partials/faculty_header %>
		
		<% include ./partials/faculty_nav %>
		
			<div class="col s7">
				<div class = "row">
					<div class = "col s12">
						<div class="card">
							<div class="card-content ">

									<div class="row">
										
										<div class="col s3"><img src="<%= announcement.author.image %>" height = "75px" width="75px" class="circle">

											<br>
											<%= announcement.author.name %>
										</div>
										<div class="col s8">
											<p><%= announcement.text %></p>
										</div>
									</div>

									<div class="card-action">
										
										<% comments.forEach(function(comment) { %>
										<div class="card-action">

											<h6><%= comment.author.name %></h6>
											<p><%= comment.text %></p>

										</div>
										<% }); %>

									</div>
									
									<div class="card-action">
										<div class="row">
										    <form class="col s12" action="/faculty/groups/<%= currentGroup._id %>/announcements/<%= announcement._id %>/new" method="post">
										      <div class="row">
										        <div class="input-field col s12">
										          <textarea id="textarea1" class="materialize-textarea" name="comment"></textarea>
										          <label for="textarea1">Add a comment</label>
										          <input class="waves-effect waves-light btn" type="submit" name="post">
										        </div>
										      </div>
										    </form>
										 </div>
									</div>


						</div>
					</div>
				</div>

			</div>
		
		<div class="col s3">
			<!-- Grey navigation panel -->
			<div class="row">
				<div class="col s12 m12">
					<div class="card">
						<div class="card-content">
							<span class="card-title">Upcoming Events</span>
							<table class="striped">
								<thead>
									<tr>
										<th>Event</th>
										<th>Date</th>
									</tr>
								</thead>
								
								<tbody>
									<tr>
										<td>Image Quiz</td>
										<td>1/6/2018</td>
									</tr>
									<tr>
										<td>GPU Lab Eval</td>
										<td>3/6/2018</td>
									</tr>
									<tr>
										<td>NLP Lab Eval</td>
										<td>6/7/2018</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		</div>
		
	</body>
</html>